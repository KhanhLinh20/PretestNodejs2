extends ../layout.pug

block content
  h2 
    a.btn.btn-primary(href="/product/create") Add New Product 
  h1.text-center Product List
  
  table.table
    thead.thead-dark
      tr
        th _id
        th ID 
        th Product Name
        th Product Price
        th Email 
        th Password
        th Image
        th Action
    tbody
      if products  
        each item in products
          tr
            td= item._id
            td= item.productID
            td= item.productName
            td= item.productPrice
            td= item.email
            td= item.password
            td
              img(src=`/images/${item.image}` style="width:100px;height:auto")
            td.d-flex.justify-content-around.align-self-center
              a.btn.btn-warning(href=`/product/update/${item.productID}`) Update
              a.btn.btn-danger(href=`/product/delete/${item.productID}` onclick="confirmDelete()") Delete
      else 
        tr 
          td(colspan="7") No product found!
  script.
    function confirmDelete() {
      if (confirm("Are you sure you want to delete this product?")) {
        return;
      }
    }